{
  "name": "@nordicsemiconductor/bdd-markdown",
  "version": "0.0.0-development",
  "description": "Write BDD tests in Markdown.",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/bdd-markdown-js.git"
  },
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/bdd-markdown-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/bdd-markdown-js#readme",
  "keywords": [
    "nrf-asset-tracker",
    "bdd"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "node": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*",
      "node": "./dist/*"
    }
  },
  "dependencies": {
    "@sinclair/typebox": "0.31.1",
    "ajv": "8.12.0",
    "chalk": "5.3.0",
    "jsonata": "2.0.3",
    "toposort": "2.0.2",
    "yaml": "2.3.1"
  },
  "devDependencies": {
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "12.0.76",
    "@types/node": "20.5.1",
    "@types/prettier": "2.7.3",
    "@types/toposort": "2.0.3",
    "check-node-version": "4.2.1",
    "eslint-import-resolver-typescript": "3.6.0",
    "eslint-plugin-import": "2.28.0",
    "husky": "8.0.3",
    "lint-staged": "13.3.0",
    "prettier": "3.0.2",
    "tsx": "3.12.7",
    "typescript": "5.1.6"
  },
  "prettier": "@nordicsemiconductor/asset-tracker-cloud-code-style/.prettierrc",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "test": "find ./ -type f -name \\*.spec.ts | xargs npx tsx --test --test-reporter spec",
    "prepare": "husky install && check-node-version --package",
    "prepublishOnly": "npx tsc --noEmit false --outDir ./dist -d"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix --ext .js,.ts"
    ]
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "dist/index.d.ts",
    "dist/index.js",
    "dist/parser",
    "dist/reporter",
    "dist/runner",
    "LICENSE",
    "README.md"
  ]
}
