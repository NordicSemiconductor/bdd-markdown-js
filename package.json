{
  "name": "@nordicsemiconductor/bdd-markdown",
  "version": "0.0.0-development",
  "description": "Write BDD tests in Markdown.",
  "type": "module",
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "typings": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "node": "./dist/index.js"
  },
  "dependencies": {
    "chalk": "5.0.1",
    "tap-parser": "11.0.1",
    "yaml": "2.1.1"
  },
  "devDependencies": {
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "11.0.125",
    "@types/node": "18.7.16",
    "eslint-import-resolver-typescript": "3.5.1",
    "eslint-plugin-import": "2.26.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "tsx": "3.9.0",
    "typescript": "4.8.3"
  },
  "prettier": "@nordicsemiconductor/asset-tracker-cloud-code-style/.prettierrc",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "test": "npx tsx tests.ts",
    "prepare": "husky install",
    "prepublishOnly": "npx tsc --noEmit false --outDir ./dist -d"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix --ext .js,.ts"
    ]
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "dist/index.d.ts",
    "dist/index.js",
    "dist/parser",
    "dist/reporter",
    "dist/runner",
    "LICENSE",
    "README.md"
  ]
}
